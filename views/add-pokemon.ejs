    <link rel="stylesheet" href="/css/add-pokemon.css">
</head>
<body>

  <!--header/cabecalho -->

  <header>
    <div class="cabecalho">
        <a href="/">
            <img src="/imgs/pokemon-logo.svg" alt="Logo Pokemon" class="logo">
        </a>

        <nav>
            <p><a href="/">In√≠cio</a></p>
